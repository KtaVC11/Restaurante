/*
* === font-sizes ===
*/
$font-size          : 16px !default;                // Base font
$font-size-clean    : strip-unit($font-size) !default;       // Base font unit
$line-height        : (($font-size-clean / 10) + 0);        // line height
$letter-spacing     : 0 !default;                           // letter spacing
$forms-line-height  : 40px !default;                        // alto del input de los forms

/*
* === font families ===
*/
$font-monospace     : "Lucida Console", Monaco, monospace !default;
$font-base          : "Helvetica Neue", Helvetica, Arial, sans-serif !default;
$font-primary       : null !default;
$font-secondary     : null !default;

/*
* === font weights ===
*/
$font-light         : 300 !default;
$font-regular       : 400 !default;
$font-medium        : 700 !default;
$font-semibold      : 600 !default;
$font-bold          : 700 !default;
$font-black         : 800 !default;

